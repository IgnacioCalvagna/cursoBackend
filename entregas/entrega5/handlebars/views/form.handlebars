<h2 class="text-secondary">Ingrese Producto</h2>
<section class="p-4 bg-light">
  <form action="/api/productos/add" method="POST">
    <div class="mb-3">
      <label
        class="form-label fw-bold text-secondary fs-3"
        for="name"
      >Title:</label>
      <input class="form-control" type="text" name="title" required />
    </div>
    <div class="mb-3">
      <label
        class="form-label fw-bold text-secondary fs-3"
        for="price"
      >Price:</label>
      <input class="form-control" type="number" name="price" required />
    </div>
    <div class="mb-3">
      <label
        class="form-label fw-bold text-secondary fs-3"
        for="price"
      >Quantity:</label>
      <input class="form-control" type="number" name="quantity" required />
    </div>
    <div class="mb-3">
      <label class="form-label fw-bold text-secondary fs-3" for="picture">Foto
        URL:</label>
      <input class="form-control" type="url" name="img" required />
    </div>
    <div class="mb-3">
      <input class="btn btn-success" type="submit" value="Enviar" />

    </div>
  </form>
  <div>
    <a href="./">
      <button class="btn btn-info">Ver Productos</button>
    </a>
  </div>
</section>