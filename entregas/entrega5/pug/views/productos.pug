doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  body(class='container')



    section
        h2(style="text-align:center")   Productos
        br  

        a(href="./products/add")
                button(class="btn btn-success") agregar productos 
        if productos.length !== 0
              table.table(style="text-align:center") 
                thead
                    tr.bg-primary
                        th #
                        th Nombre
                        th Precio
                        th Quantity 
                        th Foto
                        
                tbody.text-center
                    each producto in productos
                        tr.text-center
                            td.align-middle= producto.id
                            td.align-middle= producto.title
                            td.align-middle= producto.price
                            td.align-middle= producto.quantity 
                            td.align-middle
                                img(src=producto.img width="100vw" height="120vh" alt=producto.nombre)
            

             
        else 
          div   
            h2 no hay productos
            